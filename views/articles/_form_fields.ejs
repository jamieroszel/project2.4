<div class="form-group">
    <label for="title">Title</label>
    <input value="<%= article.title %>" type="text" name="title" id="title" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control" rows="3"><%= article.description %></textarea>
  </div>
  <div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control" rows="15" required><%= article.markdown %></textarea>
  </div>
  
  <a href="/" class="btn btn-secondary mb-4 mr-sm-2">Cancel</a>
  <button type="submit" class="btn btn-primary mb-4">Save</button>